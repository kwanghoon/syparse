{ct_opts, [
    {cover},
    {verbose}
]}.

{cover_enabled, true}.
{cover_excl_mods, [
    sylexer,
    syparse,
    syparse_generator
]}.
{cover_opts, [verbose]}.

{deps_error_on_conflict, true}.

{dialyzer_plt_location, local}.
{dialyzer_warnings, [
    error_handling,
    overspecs,
    race_conditions,
    specdiffs,
    underspecs,
    unknown,
    unmatched_returns
]}.

{eunit_opts, [
    skip_deps,
    verbose
]}.

{xrl_opts, [{verbose, true}]}.

{yrl_opts, [{verbose, true}]}.
